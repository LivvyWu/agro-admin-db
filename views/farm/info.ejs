            x = centroid[0];
            y = centroid[1];
            k = 4;
            centered = d;
        } else {
            x = w / 2;
            y = h / 2;
            k = 1;
            centered = null;
        }

        // Highlight the clicked province
        mapLayer.selectAll('path')
            .style('fill', function (d) {
                return centered && d === centered ? '#D5708B' : fillFn(d);
            });

        // Zoom
        g.transition()
            .duration(750)
            .attr('transform', 'translate(' + w / 2 + ',' + h / 2 + ')scale(' + k + ')translate(' + -x + ',' + -y + ')');
    }

